<?import aa.monoglot.ui.ControlledTab?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<ControlledTab fx:id="tab" text="%tab.inflection" xmlns:fx="http://javafx.com/fxml"
               fx:controller="aa.monoglot.ui.controller.InflectionTableController">
    <BorderPane>
        <top>
           <Label BorderPane.alignment="CENTER_LEFT" text="Inflection Table for: " >
                <font>
                    <Font name="Arial" size="20"/>
                </font>
           </Label>
        </top>
        <!--Space for the dialog-->
        <center>
            <DialogPane>
                <content>
                    <ComboBox fx:id="InflectionTable" layoutX="15.0" layoutY="33.0" prefWidth="20.0" promptText="Choose Type" onAction="#tableSelect">
                        <items>
                            <!--ComboBox to hold types to be selected-->
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Type 1" />
                                <String fx:value="Type 2" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </content>
            </DialogPane>
        </center>
        <bottom>
            <!--Area for table-->
            <TableView>
            <columns>

            </columns>
            </TableView>
        </bottom>
    </BorderPane>
</ControlledTab>