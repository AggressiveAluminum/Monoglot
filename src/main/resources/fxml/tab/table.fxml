<?import aa.monoglot.ui.ControlledTab?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<?import javafx.scene.control.TableColumn?>
<ControlledTab fx:id="tab" text="%tab.inflection" xmlns:fx="http://javafx.com/fxml"
               fx:controller="aa.monoglot.ui.controller.InflectionTableController">
    <BorderPane>
        <top>
            <HBox>
                <Label BorderPane.alignment="CENTER_LEFT" text="Inflection Table for: " >
                <font>
                    <Font name="Arial" size="20"/>
                </font>
            </Label>
                <ComboBox fx:id="InflectionTable" layoutX="15.0" layoutY="33.0" promptText="Choose Type" onAction="#tableSelect">
                    <items>
                        <!--ComboBox to hold types to be selected-->
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Type 1" />
                            <String fx:value="Type 2" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
        </top>
        <center>
            <TableView>
             <columns>
                 <TableColumn text="Type 1"/>
                 <TableColumn text="Type 2"/>
             </columns>
            </TableView>
        </center>
    </BorderPane>
</ControlledTab>