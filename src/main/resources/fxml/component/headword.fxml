            <ComboBox promptText="cat." GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            <TextField promptText="tags" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
        </GridPane>
